<?xml version="1.0" encoding="utf-8" ?>
<component name="LandingPage" extends="BasePage">
	<script type="text/brightscript" uri="LandingPage.brs" />
	<interface>
		<field id="myCustomStringField" type="string" />
		<field id="myCustomBooleanField" type="boolean" />
		<field id="myCustomIntegerField" type="integer" />
		<field id="myCustomArrayField" type="array" />
		<field id="myCustomAssocArrayField" type="assocarray" />
	</interface>
	<children>
		<Rectangle id="rect" width="1920" height="1080" color="#111111" />
		<Rectangle id="rect2" width="100" height="100" color="#00FF00" translation="[100, 100]">
			<Rectangle id="rect3" width="50" height="50" color="#0000FF" translation="[25, 25]" />
		</Rectangle>

		<Group id="offsetGroup" translation="[1500, 100]">
			<Rectangle id="offsetGroupRect1" width="100" height="100" color="#FF0000" translation="[100, 100]" />
			<Rectangle id="offsetGroupRect2" width="100" height="100" color="#00FF00"  translation="[300, 100]">
				<Rectangle id="offsetGroupRect2_child" width="50" height="50" color="#0000FF" translation="[25, 25]" />
			</Rectangle>
		</Group>

		<AppButton id="loginButton" text="Login" translation="[300, 150]" />
		<Group id="testTarget">
			<Group id="child1" />
			<Group id="child2">
				<Group id="subchild1" />
				<Group id="subchild2" />
				<Group id="subchild3" />
			</Group>
			<Group id="child3" />
		</Group>
		<Poster id="poster" width="42" />
		<RowList
			id="rowListWithoutCustomTitleComponent"
			itemComponentName="RowListItemComponent"
			itemSize="[1920, 150]"
			numRows="6"
			showRowLabel="[true]"
			rowSpacings="[50, 50, 50]"
			rowItemSpacing="[[30, 0]]"
			rowItemSize="[[300, 150]]"
			translation="[150, 300]" />
		<RowList
			id="rowListWithCustomTitleComponent"
			itemComponentName="RowListItemComponent"
			rowTitleComponentName="RowListRowTitleComponent"
			itemSize="[1920, 150]"
			numRows="6"
			showRowLabel="[true]"
			rowSpacings="[50, 50, 50]"
			rowItemSpacing="[[30, 0]]"
			rowItemSize="[[300, 150]]"
			translation="[150, 700]" />
		<CustomMarkupGrid
			id="markupGrid"
			itemComponentName="MarkupGridItemComponent"
			itemSize="[150, 150]"
			numRows="2"
			numColumns="4"
			itemSpacing="[15, 15]"
			translation="[500, 100]" />
	</children>
</component>
